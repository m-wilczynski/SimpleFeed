@using SimpleFeed.Core.User
@model IndexViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Manage your account";
}

<h2>@ViewData["Title"]</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div class="container">
    <div>
        <h3>Security</h3>
        <button class="reversed">
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change password</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create password</a>
            }
        </button>
    </div>
    <div>
        <h3>Personal details</h3>
        <button class="reversed">
            @Html.ActionLink("Show my profile", "GetUser", "User", new { userId = UserManager.GetUserId(User) })
        </button>
        <button class="reversed">
            @Html.ActionLink("Edit my profile", "EditProfile", "Manage")
        </button>
    </div>
</div>
