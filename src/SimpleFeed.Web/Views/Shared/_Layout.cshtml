<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - SimpleFeed</title>

        <link href="https://fonts.googleapis.com/css?family=Titillium+Web:300,400,400i,700,700i&amp;subset=latin-ext" rel="stylesheet">
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <div id="navigation">
            <div id="navigation-container">
                <ul id="logo-container">
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            <img id="logo" src="~/images/logo.png"/>
                        </a>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="content-container">
            @RenderBody()
            <footer>
                <p>&copy; 2016 - SimpleFeed</p>
            </footer>
        </div>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-timeago/jquery.timeago.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
